package Homework.Lesson8;

public class Zadacha1 {
    
    static int multiplyNumbers(int a,int b,int c){
     return a * b * c;
    };
    
    static void devedendPrint(int a,int b){
        int quotient = a / b;
        int remainder = a % b;
        System.out.println("Целое частное: " + quotient + ", Остаток: " + remainder);
        
    }
   
}


class Zadacha1Test{
    
     public static void main(String[] args){

         int result1 = Zadacha1.multiplyNumbers(2,3,4);
         System.out.println("Результат умножения: " + result1);
         
          Zadacha1.devedendPrint(5,2);

         int result2 = Zadacha1.multiplyNumbers(4,5,6);
         System.out.println("Результат умножения: " + result2);

         Zadacha1.devedendPrint(7,4);


     }
}
